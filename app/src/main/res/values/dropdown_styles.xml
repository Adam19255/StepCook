<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for dropdown/autocomplete menus -->
    <style name="DropdownStyle" parent="Widget.Material3.AutoCompleteTextView.FilledBox.Dense">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!-- Style for items in dropdown menus -->
    <style name="DropdownItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>